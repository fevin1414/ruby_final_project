<div class="address-container">
  <%= form_with url: create_address_guest_checkout_index_path, local: true do |form| %>
    <%= form.fields_for :address do |address_fields| %>
      <div class="field">
        <%= address_fields.label :street %>
        <%= address_fields.text_field :street %>
      </div>
      <div class="field">
        <%= address_fields.label :city %>
        <%= address_fields.text_field :city %>
      </div>
      <div class="field">
        <%= address_fields.label :province %>
        <%= address_fields.collection_select :province_id, @provinces, :id, :name %>
      </div>
    <% end %>
    <div class="actions">
      <%= form.submit "Proceed", class: "btn btn-primary" %>
    </div>
  <% end %>


