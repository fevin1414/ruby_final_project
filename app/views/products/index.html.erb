<h1>Available Products</h1>

<%= form_with(url: products_path, method: "get", id: "product-filter-form") do |form| %>
  <%= form.label(:filter, "Filter by:") %>
  <%= form.select(:filter, options_for_select([['None', nil], ['On Sale', 'on_sale'], ['Newly Added', 'newly_added'], ['Recently Updated', 'recently_updated']], selected: params[:filter])) %>

  <%= form.submit("Filter", class: "filter-button") %>
<% end %>

<%= form_with(url: products_path, method: "get", id: "product-search-form") do |form| %>
  <%= form.label(:keyword, "Search for:") %>
  <%= form.text_field(:keyword, value: params[:keyword]) %>
  <%= form.label(:category, "Category:") %>
  <%= form.select(:category, options_for_select([['All Products', nil]] + Category.all.map { |c| [c.name, c.id] }, selected: params[:category])) %>

  <%= form.hidden_field(:on_sale, value: params[:on_sale]) %>
  <%= form.hidden_field(:newly_added, value: params[:newly_added]) %>
  <%= form.hidden_field(:recently_updated, value: params[:recently_updated]) %>

  <%= form.submit("Search", class: "search-button") %>
<% end %>



<table>
  <thead>
    <tr>
      <th>Thumbnail</th>
      <th>Name</th>
      <th>Price</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <% if product.product_images.present? %>
            <%= image_tag product.product_images.first.image.url(:thumbnail) %>
          <% else %>
            <%= image_tag 'https://lorempixel.com/200/200/', class: 'placeholder-image' %>
          <% end %>
        </td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Details', product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @products %>
