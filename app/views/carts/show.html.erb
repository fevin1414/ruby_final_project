<% if flash[:notice] %>
  <div class="flash-notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<h1>Your Cart</h1>
<table>
  <!-- Cart table code here -->
<thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td>
          <%= form_with(url: update_item_cart_path, method: :post) do |form| %>
            <%= form.hidden_field :product_id, value: product.id %>
            <%= form.number_field :quantity, value: @cart.items[product.id.to_s], min: 1 %>
            <%= form.submit 'Update' %>
          <% end %>
        </td>
       <td><%= product.price * BigDecimal(@cart.items[product.id.to_s]) %></td>

        <td>
          <%= form_with(url: remove_item_cart_path, method: :post) do |form| %>
            <%= form.hidden_field :product_id, value: product.id %>
            <%= form.submit 'Remove' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if user_signed_in? %>
  <h2>Your Addresses</h2>

  <% @user.addresses.each do |address| %>
    <div>
      <p><%= address.street %>, <%= address.city %>, <%= address.province.name %></p>
      <%= link_to 'Edit', edit_address_path(address) %>
     <%= button_to 'Delete', address_path(address), method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>

  <%= link_to 'Add New Address', new_address_path %>
<% end %>

<h2>Total: <%= @cart.total %></h2>

<% if user_signed_in? %>
  <p>User ID: <%= current_user.id %></p>
<% else %>
  <p>Please log in to view your address and card details.</p>
<% end %>
